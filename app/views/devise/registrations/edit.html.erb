<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , class:"ts form" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="fields">
        <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
            <%= f.label :password %> 
            <%= f.password_field :password, autocomplete: "off" , placeholder:"Leave blank if you don't want to change it" %>
            <% if @minimum_password_length %>
              <small><%= @minimum_password_length %> characters minimum</small>
            <% end %>
        </div>
    </div>

    <fieldset class="tertiary">
        <legend>Think twice before submit!</legend>
        <div class="fields">
            <div class="field">
              <%= f.label :current_password %> 
              <%= f.password_field :current_password, autocomplete: "off" %>
              <small>(we need your current password to confirm your changes)</small>
            </div>
          <div class="field">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
    </fieldset>
    <div class="actions">
        <%= f.submit "Update" , class: "ts primary button" %>
    </div>
<% end %>

<div class="ts inverted warning card">
    <div class="content">
        <div class="header">Cancel my account</div>
        <div class="description">
            <p>Unhappy?</p>
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"ts negative button" %>
        </div>
    </div>
</div>
<%#= link_to "Back", :back %>