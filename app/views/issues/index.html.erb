<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table class="ts table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Title</th>
      <th>Context</th>
      <th>Asker</th>
      <th>Developer</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.project %></td>
        <td><%= issue.title %></td>
        <td><%= issue.context %></td>
        <td><%= issue.asker %></td>
        <td><%= issue.developer %></td>
        <td><%= issue.status %></td>
        <td><%= issue.priority %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
